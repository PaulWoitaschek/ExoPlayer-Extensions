STYLE
::cue(.unit-em) {
  font-size: 4.4em;
}

STYLE
::cue(.unit-px) {
  font-size: 2px;
}

STYLE
::cue(.unit-percent) {
  font-size: 3.5%
}

STYLE
::cue(.case-insensitivity) {
  font-size: 2Px;
}

STYLE
::cue(.bad-unit) {
  font-size: 4.4ef;
}

STYLE
::cue(.bad-value) {
  font-size: 3.5.5%
}

